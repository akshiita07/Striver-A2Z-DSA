class Solution {
public:
    int maxSumDivThree(vector<int>& nums) {
        int n = nums.size();
        vector<int> dp(3, INT_MIN);
        //dp[0]: sum entirely divisble by 3
        //dp[1]: sum%3=1 ie remainder=1
        //dp[2]: sum%3=2 ie remainder=2
        dp[0] = 0;

        for (int i = 0; i < n; i++) {
            vector<int> temp = dp;
            for (int r = 0; r < 3; r++) {
                if (dp[r] != INT_MIN) {
                    int newR = (r + nums[i]) % 3;
                    temp[newR] = max(temp[newR], dp[r] + nums[i]);
                }
            }
            dp = temp;
        }
        return dp[0]; // entirely divisible-> dp[0]
    }
};
